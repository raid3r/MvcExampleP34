@model ChangePasswordForm
@{
    
}

<div class="row">

    <div class="col-md-6">
        @await Html.PartialAsync("_UserProfileCard", ViewData["User"])
    </div>

    <div class="col-md-6">

        <form method="post">
            <div class="card">

                <div class="card-header">
                    <h3>Reset password</h3>
                </div>

                <div class="card-body">


                    <div class="mb-3">
                        <label asp-for="OldPassword" class="form-label"></label>
                        <input asp-for="OldPassword" type="password" class="form-control" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                       
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label"></label>
                        <input asp-for="NewPassword" type="password" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    

                </div>

                <div class="card-footer d-flex justify-content-between">

                    <button type="submit" class="btn btn-primary">Change Password</button>
                    <a asp-controller="Profile" asp-action="Index" class="btn btn-secondary">Cancel</a>

                </div>

            </div>
        </form>


    </div>

</div>