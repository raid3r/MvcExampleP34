@{
    ViewData["Title"] = "Access Denied";
}

<div class="error-wrapper">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <!-- Велике 403 на фоні -->
            <h1 class="error-code position-absolute start-50 translate-middle-x">403</h1>

            <!-- Основний контент -->
            <div class="position-relative">
                <i class="bi bi-shield-lock display-1 text-warning mb-4"></i>
                <h1 class="display-4 fw-bold mb-3">Доступ заборонено</h1>
                <p class="lead mb-4">
                    У вас немає прав для перегляду цієї сторінки.<br>
                    Якщо ви вважаєте, що це помилка — зверніться до адміністратора.
                </p>

                <div class="d-flex gap-3 justify-content-center flex-wrap">
                    <a href="/" class="btn btn-primary btn-lg px-5">
                        <i class="bi bi-house-door me-2"></i>На головну
                    </a>
                    <button class="btn btn-secondary btn-lg px-5" onclick="history.back()">
                        <i class="bi bi-arrow-left me-2"></i>Назад
                    </button>
                </div>

                <hr class="my-5 border-light opacity-25">

                <small class="text-light opacity-75">
                    Помилка 403 — Forbidden
                </small>
            </div>

        </div>
    </div>
</div>

