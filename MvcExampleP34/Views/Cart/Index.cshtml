@model Cart
@{
    ViewData["Title"] = "Cart";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th></th>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @foreach (var image in item.Product.Images)
                    {
                        <img src="@image.Src" width="50"
                             style="max-height: 50px" />
                    }
                </td>
                <td>
                    <b>@item.Product.Name</b>
                </td>
                <td>
                    <b>@item.Product.Price$</b>
                </td>
                <td>
                    <b>@item.Quantity</b>
                </td>
                <td>
                    <b>@(item.Quantity * item.Product.Price)$</b>
                </td>
                
            </tr>
        }
        <tr>
            <td colspan="4" class="text-end"><b>Total:</b></td>
            <td><b>$@Model.Items.Sum(x => x.Product.Price * x.Quantity)$</b></td>
        </tr>
    </tbody>
</table>

