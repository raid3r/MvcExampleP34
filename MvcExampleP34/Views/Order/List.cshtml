@model ICollection<Order>
@{
    ViewData["Title"] = "Мої замовлення";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-12">

        <table class="table table-hover">

            <thead>
                <tr>
                    <th>Номер замовлення</th>
                    <th>Дата оновлення</th>
                    <th>Сума замовлення</th>
                    <th>Статус</th>
                    <th></th>
                </tr>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>№ @order.Number</td>
                        <td>
                            <span class="utc-date-time" data-utc="@order.UpdatedAt.ToString("dd.MM.yyyy HH:mm")"></span>
                        </td>
                        <td>$@order.Items.Sum(x => x.Price * x.Quantity)$</td>
                        <td>
                            @await Html.PartialAsync("_OrderStatusBadge", order)
                        </td>
                        <td>
                            <a asp-controller="Order" asp-action="Details" asp-route-guid="@order.UniqueId" class="btn btn-primary">Деталі</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

