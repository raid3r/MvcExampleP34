@model List<Product>
@{
    ViewData["Title"] = "Products";
}

<h1>@ViewData["Title"]</h1>

<a asp-controller="Product" asp-action="Create" class="btn btn-primary mb-3">Create</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Product</th>
            <th>Category</th>
            <th class="text-end">Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    <b>@product.Name</b><br />
                    @product.Description
                </td>
                <td>
                    @product.Category?.Name
                </td>
                <td class="text-end">
                    $@product.Price
                </td>
                <td>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id"
                       class="btn btn-warning">Edit</a>

                    <a class="btn btn-danger method-delete" 
                    asp-controller="Product" asp-action="Delete" 
                    asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {

    <script>
        const deleteLinks = document.querySelectorAll(".method-delete");
        deleteLinks.forEach(function (link) {
            link.addEventListener("click", function (event) {
                event.preventDefault();
                if (confirm("Are you sure you want to delete this product?")) {
                    fetch(link.href, {
                        method: "DELETE",
                    })
                    .then(response => {
                        if (response.ok) {
                            location.reload();
                        } else {
                            alert("Failed to delete the product.");
                        }
                    });
                }
            });
        });
    </script>

}