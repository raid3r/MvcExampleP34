@model ProductForm
@{
    var availableCategories = ViewData["Categories"] as List<Category>;
    var categoryOptions = new SelectList(availableCategories, "Id", "Name");
}
<form enctype="multipart/form-data" method="post">
    <div class="card">
        <div class="card-header">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Quantity" class="form-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label"></label>
                <select asp-for="CategoryId" class="form-select" asp-items="categoryOptions">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Images" class="form-label"></label>
                <input asp-for="Images" multiple accept=".jpg,.jpeg,.png" class="form-control" />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <div class="mb-3">
                @for (int i = 0; i < Model.Tags.Items.Count; i++)
                {
                    <div class="form-check">
                        <input type="hidden" asp-for="Tags.Items[i].Id" />
                        <input type="checkbox" class="form-check-input" asp-for="Tags.Items[i].IsSelected" />
                        <label asp-for="Tags.Items[i].IsSelected" class="form-check-label">@Model.Tags.Items[i].Name</label>
                    </div>
                }
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>