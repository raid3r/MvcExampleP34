@model List<Category>
@{
    ViewData["Title"] = "Categories";
}

<h1>@ViewData["Title"]</h1>

<a asp-controller="Category" asp-action="Create" class="btn btn-primary mb-3">Create</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th></th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>
                    @if (category.Image is not null)
                    {
                        <img src="@category.Image.Src" alt="@category.Name" width="50"
                        style="max-height: 50px"
                        />
                    }
                </td>
                <td>
                    <b>@category.Name</b>
                </td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" 
                    class="btn btn-warning">Edit</a>

                    <a class="btn btn-danger method-delete" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    const deleteLinks = document.querySelectorAll(".method-delete");
    deleteLinks.forEach(function (link) {
        link.addEventListener("click", function (event) {
            event.preventDefault();
            if (confirm("Are you sure you want to delete this category?")) {
                fetch(link.href, {
                    method: "DELETE",
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert("Failed to delete the category.");
                    }
                });
            }
        });
    });
</script>