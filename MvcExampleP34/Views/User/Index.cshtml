@model List<UserViewModel>
@{
    ViewData["Title"] = "Users";
    var currentUserId = ViewData["CurrentUserId"] as string;
}

<h1>@ViewData["Title"]</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th></th>
            <th colspan="2">User</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @if (user.Avatar is not null)
                    {
                        <img src="@user.Avatar.Src" alt="@user.FullName" width="50"
                             style="max-height: 50px" />
                    }
                </td>
                <td>
                    <b>@user.Email</b>
                </td>
                <td>
                    <b>@user.FullName</b>
                    <div>
                        @foreach (var role in user.Roles)
                        {
                            <span class="badge bg-success">@role.Name</span>
                        }
                    </div>
                </td>
                <td>
                    @if (user.Id.ToString() == currentUserId)
                    {
                        <span class="badge bg-success">It's you</span>
                    }
                    else
                    {
                        <a asp-controller="User" asp-action="ResetPassword" asp-route-id="@user.Id" class="btn btn-warning">Reset password</a>

                        <a asp-controller="User" asp-action="EditRoles" asp-route-id="@user.Id" class="btn btn-info">Edit Roles</a>

                        <a class="btn btn-danger method-delete"
                           asp-controller="User" asp-action="Delete"
                           asp-route-id="@user.Id">Delete</a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {

    <script>
        const deleteLinks = document.querySelectorAll(".method-delete");
        deleteLinks.forEach(function (link) {
            link.addEventListener("click", function (event) {
                event.preventDefault();
                if (confirm("Are you sure you want to delete this user?")) {
                    fetch(link.href, {
                        method: "DELETE",
                    })
                    .then(response => {
                        if (response.ok) {
                            location.reload();
                        } else {
                            alert("Failed to delete the user.");
                        }
                    });
                }
            });
        });
    </script>

}