@model List<Tag>
@{
    ViewData["Title"] = "Tags";
}

<h1>@ViewData["Title"]</h1>

<a asp-controller="Tag" asp-action="Create" class="btn btn-primary mb-3">Create</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Catetegory</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tag in Model)
        {
            <tr>
                <td>
                    <b>@tag.Name</b>
                </td>
                <td>
                    <a asp-controller="Tag" asp-action="Edit" asp-route-id="@tag.Id" 
                    class="btn btn-warning">Edit</a>

                    <a class="btn btn-danger method-delete" asp-controller="Tag" asp-action="Delete" asp-route-id="@tag.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    const deleteLinks = document.querySelectorAll(".method-delete");
    deleteLinks.forEach(function (link) {
        link.addEventListener("click", function (event) {
            event.preventDefault();
            if (confirm("Are you sure you want to delete this tag?")) {
                fetch(link.href, {
                    method: "DELETE",
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert("Failed to delete the tag.");
                    }
                });
            }
        });
    });
</script>